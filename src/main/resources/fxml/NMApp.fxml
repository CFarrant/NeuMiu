<FlowPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.neumiu.io.control.FXMLController">
   <children>
      <VBox>
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Songs">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#addSong" text="Add Song" />
                  </items>
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#addSong" text="Edit Song" />
                  </items>
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#addSong" text="Remove Song" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings">
                   <items>
                      <MenuItem mnemonicParsing="false" text="Volume">
                         <graphic>
                            <Slider fx:id="volumeSlider" showTickLabels="true" min="0" max="100" value="50" orientation="VERTICAL" />
                         </graphic>
                      </MenuItem>
                      <MenuItem mnemonicParsing="false" text="Mute">
                         <graphic>
                            <CheckBox fx:id="muteBox" onAction="#mute" mnemonicParsing="false" />
                         </graphic>
                      </MenuItem>
                   </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Controls">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Shuffle">
                         <graphic>
                            <CheckBox fx:id="shuffleBox" mnemonicParsing="false" />
                         </graphic>
                      </MenuItem>
                      <MenuItem mnemonicParsing="false" text="Repeat Song">
                         <graphic>
                            <CheckBox fx:id="shuffleBox" mnemonicParsing="false" />
                         </graphic>
                      </MenuItem>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#helpScreen" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
              <items>
                <HBox>
                   <children>
                      <SplitPane dividerPositions="0.5">
                        <items>
                              <AnchorPane>
                                <children>
                                  <VBox prefHeight="400.0" prefWidth="800.0">
                                    <children>
                                      <Label text="Song(s)">
                                        <font>
                                          <Font name="Copperplate Gothic Bold" size="12.0" />
                                        </font>
                                      </Label>
                                      <ListView fx:id="songInPlaylist" prefHeight="387.0" prefWidth="800.0" />
                                    </children>
                                  </VBox>
                                </children>
                              </AnchorPane>
                            </items>
                          </SplitPane>
                       </children>
                    </HBox>
                    <HBox prefHeight="200.0" prefWidth="200.0">
                      <children>
                        <SplitPane dividerPositions="0.5">
                          <items>
                            <ImageView fx:id="coverArt" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                              	<Image url="images/NoArtwork.png" />
                              </image>
                            </ImageView>
                            <VBox prefHeight="100.0" prefWidth="700.0">
                              <children>
                                <Label text="Now Playing:">
                                  <font>
                                    <Font name="Copperplate Gothic Bold" size="12.0" />
                                  </font>
                                </Label>
                                <TextField fx:id="currentlyPlaying">
                                  <VBox.margin>
                                    <Insets bottom="30.0" />
                                  </VBox.margin>
                                </TextField>
                                <Slider fx:id="seekBar" prefHeight="50.0">
                                  <VBox.margin>
                                    <Insets left="5.0" />
                                  </VBox.margin>
                                </Slider>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                  <children>
                                    <Label fx:id="curTime" text="0:00">
                                      <font>
                                        <Font name="Copperplate Gothic Bold" size="12.0" />
                                      </font>
                                      <HBox.margin>
                                        <Insets left="5.0" />
                                      </HBox.margin>
                                    </Label>
                                    <Label fx:id="totalTime" text="0:00">
                                      <font>
                                        <Font name="Copperplate Gothic Bold" size="12.0" />
                                      </font>
                                      <HBox.margin>
                                        <Insets left="527.0" />
                                      </HBox.margin>
                                    </Label>
                                  </children>
                                  <VBox.margin>
                                    <Insets bottom="-10.0" />
                                  </VBox.margin>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                  <children>
                                    <ImageView>
                                  	  <image>
                                  	  	<Image url="icons/backward.png" />
                                  	  </image>
                                  	  <HBox.margin>
                                        <Insets left="140.0" bottom="25.0" />
                                      </HBox.margin>
                                    </ImageView>
                                    <ImageView onMouseClicked="#stopSong">
                                  	  <image>
                                  	  	<Image url="icons/stop.png" />
                                  	  </image>
                                  	  <HBox.margin>
                                        <Insets left="20.0" />
                                      </HBox.margin>
                                    </ImageView>
                                    <ImageView fx:id="playTrack" onMouseClicked="#playSong">
                                  	  <image>
                                  	  	<Image url="icons/play.png" />
                                  	  </image>
                                  	  <HBox.margin>
                                        <Insets left="20.0" />
                                      </HBox.margin>
                                    </ImageView>
                                    <ImageView>
                                  	  <image>
                                  	  	<Image url="icons/forward.png" />
                                  	  </image>
                                  	  <HBox.margin>
                                        <Insets left="20.0" />
                                      </HBox.margin>
                                    </ImageView>
                                  </children>
                                </HBox>
                              </children>
                            </VBox>
                  </items>
                </SplitPane>
              </children>
            </HBox>
          </items>
        </SplitPane>
      </children>     
    </VBox>
  </children>
</FlowPane>